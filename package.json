{
  "name": "sugarshin.net",
  "description": "sugarshin.net",
  "private": true,
  "scripts": {
    "clean:build": "if [ -d build ]; then rm -rf build; fi",
    "start": "npm run clean:build; mkdir -p build; npm run cp:dev; npm run watch & live-server --no-browser --wait=400 build",
    "pug": "pug -O \"{octicons: require('${PWD}/node_modules/octicons')}\" -o build src/index.pug",
    "stylus": "stylus -u ./node_modules/poststylus --with \"[require('${PWD}/node_modules/autoprefixer')({ browsers: ['last 3 versions'] }), require('${PWD}/node_modules/css-mqpacker'), require('${PWD}/node_modules/postcss-flexbugs-fixes'), require('${PWD}/node_modules/postcss-import')()]\" -o build src/index.styl",
    "watch:styl": "npm run stylus -- -w",
    "watch:pug": "npm run pug -- -wP",
    "watch": "NODE_ENV=development npm run watch:pug & npm run watch:styl",
    "cname": "echo sugarshin.net > build/CNAME",
    "cp:dev": "cp src/portrait.png build",
    "favicon": "node scripts/favicon",
    "build:css": "npm run stylus; cssnano build/index.css build/index.css",
    "build:image": "node scripts/imagemin",
    "build:src": "npm run pug && npm run build:css && npm run build:image",
    "test": "ava",
    "build": "npm run clean:build; mkdir -p build; npm run build:src; npm run favicon; npm run cname",
    "ghpages": "gh-pages -x -m 'Update [ci skip]' -d build -r https://github.com/sugarshin/sugarshin.net.git",
    "deploy": "npm run build && npm run ghpages"
  },
  "repository": "git@github.com:sugarshin/sugarshin.net.git",
  "author": "sugarshin <shinsugar@gmail.com>",
  "license": "sugarshin all rights reserved.",
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "ava": "~0.17.0",
    "chalk": "^1.1.3",
    "css-mqpacker": "^5.0.1",
    "cssnano-cli": "^1.0.5",
    "favicons": "^4.8.3",
    "gh-pages": "~0.12.0",
    "imagemin": "^5.2.2",
    "imagemin-pngquant": "^5.0.0",
    "live-server": "^1.1.0",
    "octicons": "^5.0.1",
    "postcss-flexbugs-fixes": "^2.1.0",
    "postcss-import": "7.1.3",
    "poststylus": "~0.2.3",
    "pug": "2.0.0-beta6",
    "pug-cli": "1.0.0-alpha6",
    "sanitize.css": "^4.1.0",
    "stylus": "~0.54.5",
    "to-ico": "^1.1.3"
  }
}
